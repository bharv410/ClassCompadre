<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android1:orientation="vertical" >

    <ListView
        android1:id="@android:id/list"
        android1:layout_width="match_parent"
        android1:layout_height="236dp"
        android1:layout_weight="0.23" >
    </ListView>

    <TextView
        android1:id="@+id/classlist1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:text="              " />

    <EditText
        android1:id="@+id/className"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentLeft="true"
        android1:layout_alignParentTop="true"
        android1:ems="10"
        android1:hint="ENTER CLASS NAME" />

    <LinearLayout
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content" >

        <Button
            android1:id="@+id/startTime"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:onClick="showTimePickerDialog"
            android1:text="Pick the Time" />

        <Button
            android1:id="@+id/saveButton"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:onClick="addClass"
            android1:text="Add Class" />
    </LinearLayout>

</LinearLayout>